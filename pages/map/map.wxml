<view class="page-body">
  <view class="page-section page-section-gap">
    <map id="myMap" style="width: 100%; height: 300px;" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" circles="{{circles}}" covers="{{covers}}" scale="{{scale}}" show-location></map>
  </view>
  <view class="btn-area">
    <view class="page__bd page__bd_spacing">
      <slider show-value value="50" show-value bindchange="mapCircle" />
    </view>
    <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
    <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
  </view>
</view>